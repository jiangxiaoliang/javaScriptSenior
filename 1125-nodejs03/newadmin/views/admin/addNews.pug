doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title Document
    link(href='./css/addNews.css', rel='stylesheet', type='text/css')
  body
    .menu-content
      h1 添加新闻
      form.addInput(method='post', action='/admin/addNewsData', enctype='multipart/form-data')
        div
          | 标题：
          input.title(type='text' name='title')
        .contentContainer
          | 内容：
          textarea.content(name='content', id='', cols='30', rows='10')
        div
          | 类型：
          select.selectStyle(name='type', id='')
            option(value='逮捕')
              | 逮捕
            option(value='消息')
              | 消息
            option(value='通讯')
              | 通讯
            option(value='文学')
              | 文学
        div
          | 国家：
          select.selectStyle(name='country', id='')
            option(value='美国')
              | 美国
            option(value='韩国')
              | 韩国
            option(value='日本')
              | 日本
            option(value='英国')
              | 英国
        .uploadContainer
          | 缩略图：
          span.fileinput-button
            span 上传图片
            input.imgFile(type='file', name='img')
        div
          button.btn(type='submit') 提交
